    <div class="blogcard">
        <div class="img"><a href="{{ post.url }}"><img src="{{ post.data.image}}" alt=""></a></div>
        <div class="details">
        <div class="writer">
            <p class="user"><i class="fa-solid fa-user"></i> {{ post.data.author }} | <i class="fa-solid fa-calendar-days"></i> {{ post.data.publish }} | <i class="fa-solid fa-clock"></i> {{ post.data.time }}</p>
        </div>
        <h3><a href=" {{ post.url }}">{{ post.data.title }}</a></h3>
        <p>{{ post.data.description }}</p>
        <a href="{{ post.url }}"><button>Read More</button></a>
        </div>
    </div>